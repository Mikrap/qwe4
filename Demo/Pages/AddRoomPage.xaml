<Page x:Class="Demo.Pages.AddRoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="400"
      Title="AddRoomPage" Background="Snow">

    <Grid Margin="10">
        <StackPanel Margin="20" VerticalAlignment="Top">
            <!-- Room Number -->
            <Label Content="Room Number:" Margin="0,0,0,5"/>
            <TextBox Name="RoomNumberTextBox" Margin="0,0,0,15"/>
            
            <Label Content="Floor:" Margin="0,0,0,5"/>
            <TextBox Name="FloorTextBox" Margin="0,0,0,15"/>

            <!-- Category -->
            <Label Content="Category:" Margin="0,0,0,5"/>
            <TextBox Name="CategoryTextBox" Margin="0,0,0,15"/>

            <!-- Status -->
            <Label Content="Status:" Margin="0,0,0,5"/>
            <ComboBox Name="StatusComboBox" Margin="0,0,0,15">
                <ComboBoxItem Content="Грязный"/>
                <ComboBoxItem Content="Чистый"/>
                <ComboBoxItem Content="Назначен в уборке"/>
            </ComboBox>

            <!-- Price -->
            <Label Content="Price:" Margin="0,0,0,5"/>
            <TextBox Name="PriceTextBox" Margin="0,0,0,20"/>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Click="Save_Click" Width="80" Margin="0,0,10,0"/>
                <Button Content="Cancel" Click="Cancel_Click" Width="80"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
