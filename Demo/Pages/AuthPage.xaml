<Page x:Class="Demo.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid Background="#FFE5E5E5">
        <Border Background="White" CornerRadius="10" 
                Width="320" Height="300" 
                VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                        Width="260" Margin="0,0,0,10">
                <TextBlock Text="Авторизация" 
                           FontSize="22" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <TextBlock Text="Логин:" Margin="5,0,0,5"/>
                <TextBox x:Name="txtLogin" Height="30" FontSize="14"/>

                <TextBlock Text="Пароль:" Margin="5,10,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30" FontSize="14"/>


                <Button x:Name="btnLogin" Content="Войти" Height="35" 
                        Background="gray" Foreground="White" 
                        FontWeight="Bold" Margin="0,10,0,0"
                        Click="btnLogin_Click"/>

                <TextBlock x:Name="lblMessage" Foreground="Red" 
                           Margin="0,10,0,0" TextWrapping="Wrap" 
                           HorizontalAlignment="Center" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
